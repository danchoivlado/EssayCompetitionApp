@using EssayCompetition.Common
@using EssayCompetition.Web.ViewModels.Users
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
    this.ViewData["ImagePath"] = "img/home-bg.jpg";
    this.Layout = "_CustomLayout";
    this.ViewData["ImageH1Text"] = "Essay competition";
    this.ViewData["ImageSpanText"] = "Site for essay contesters";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @foreach (var essay in this.Model.Essays)
            {
                <div class="post-preview">
                    <a asp-action="ById" asp-controller="Essay" asp-area="" asp-route-id="@essay.Id">
                        <h2 class="post-title">
                            @essay.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @essay.Description
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a asp-action="ById" asp-controller="Users" asp-area="" asp-route-id="@essay.UserId">@essay.UserUserName</a>
                        on @essay.DisplayCreateDate
                    </p>
                </div>
                <hr>
            }
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr>