@using EssayCompetition.Web.ViewModels.ContestHome
@model ByIdViewModel
@{
    this.ViewData["Title"] = "About Page";
    this.ViewData["ImagePath"] = "~/img/home-bg.jpg";
    this.Layout = "_CustomLayout";
    this.ViewData["ImageH1Text"] = "Contest";
    this.ViewData["ImageSpanText"] = "All contestants in contes";
}
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                UserName
                            </th>
                            <th>
                                Essay name
                            </th>
                            <th>
                                Essay popints
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Contestants)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EssayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EssayPoints)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination">
                    @for (var i = 1; i <= Model.Pager.PagesCount; i++)
                    {
                        <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                            <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</article>

<hr>