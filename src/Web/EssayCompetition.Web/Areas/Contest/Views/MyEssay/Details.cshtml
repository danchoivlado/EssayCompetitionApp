@using EssayCompetition.Web.ViewModels.Contest.MyEssay
@model DetailsViewModel
@{
    this.ViewData["Title"] = "My Essays";
    this.ViewData["ImagePath"] = "~/img/home-bg.jpg";
    this.Layout = "_CustomLayout";
    this.ViewData["ImageH1Text"] = "My Essays";
    this.ViewData["ImageSpanText"] = "All essays from competitions";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-md-10 mx-auto">
                <div class="form-group row-cols-md-4">
                    <label asp-for="@Model.Title" class="control-label"></label>
                    <input asp-for="@Model.Title" readonly class="form-control" />
                </div>
                <div class="form-group row-cols-md-3">
                    <label asp-for="@Model.Description" class="control-label"></label>
                    <textarea asp-for="@Model.Description" readonly rows="4" class="form-control"> </textarea>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Content" class="control-label"></label>
                    <textarea rows="10" cols="50" readonly asp-for="@Model.Content" class="form-control myTextEditor"></textarea>
                </div>
                <div class="form-group row-cols-md-4">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <a href="@Model.ImageUrl"  target="_blank">Preview current image</a>
                </div>
                <div class="form-group row-cols-md-3">
                    <label asp-for="@Model.Grade.PrivateComments" class="control-label"></label>
                    <textarea asp-for="@Model.Grade.PrivateComments" readonly rows="4" class="form-control"> </textarea>
                </div>
                <div class="form-group row-cols-md-4">
                    <label asp-for="@Model.Grade.Points" class="control-label"></label>
                    <input asp-for="@Model.Grade.Points" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.ContestName)</b>
                    <br />
                    @Html.DisplayFor(model => model.ContestName)
                </div>
            <a asp-area="Contest" asp-action="Index">Back to list</a>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#inputGroupFile01').change(function () {
            $('#userIamgeUrl').val($(this).val());
        });
    </script>

    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            mode: "specific_textareas",
            editor_selector: "myTextEditor",
            plugins: [
                "image paste table link code media"
            ],

            //menubar: false,
            //toolbar_items_size: 'small',
            readonly : 1,
            height: "700",
            width: 1100,
        });
    </script>
}