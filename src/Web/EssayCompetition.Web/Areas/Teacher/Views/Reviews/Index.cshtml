@using EssayCompetition.Web.ViewModels.Teacher.Reviews
@model IndexViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Essays to review</h2>
<br />
@foreach (var essay in Model.Essays)
{
    <h3>
        <a asp-action="ReviewEssay" asp-route-id="@essay.Id">
            @essay.Title <br />
            @essay.Description
        </a>
    </h3>
    <hr />
    <br />
}
<ul class="pagination">
    @for (var i = 1; i <= Model.Pager.PagesCount; i++)
    {
        <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
            <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
        </li>
    }
</ul>
